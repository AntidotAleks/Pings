{
  "name": "Pings",
  "author": "Antidot",
  "description": "Adds a ping system to Raft, allowing players to mark locations or items of interest. Mod Extra Settings API gives ability to change ping keybinds and duration.",
  "version": "1.0",
  "license": "GNU AGPLv3",
  "icon": "icon.png",
  "banner": "banner.jpg",
  "gameVersion": "1.0",
  "requiredByAllPlayers": false,
  "updateUrl": "https://www.raftmodding.com/api/v1/mods/YOUR-MOD-SLUG-HERE/version.txt",
  "isModPermanent": false,
  "excludedFiles": [],
  "modSettings": [
    {
      "type": "keybind",
      "name": "pingKeybind",
      "text": "Ping Keybind",
      "mainDefault": "Mouse2"
    },
    {
      "type": "slider",
      "name": "pingDuration",
      "text": "Ping Duration (in seconds)",
      "default": 10,
      "range": {
        "min": 3,
        "max": 30,
        "decimals": 0
      }
    },
    {
      "type": "checkbox",
      "name": "debugMode",
      "text": "Enable Logging In The Console",
      "default": false
    }
  ]
}