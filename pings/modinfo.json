{
  "name": "Pings",
  "author": "Antidot",
  "description": "Adds a ping system to Raft, allowing players to mark locations or items of interest. Mod Extra Settings API gives ability to change ping keybinds and duration.",
  "version": "2.0",
  "license": "GNU AGPLv3",
  "icon": "icon.jpg",
  "banner": "banner.jpg",
  "gameVersion": "1.0",
  "requiredByAllPlayers": false,
  "updateUrl": "https://www.raftmodding.com/api/v1/mods/pings/version.txt",
  "isModPermanent": false,
  "excludedFiles": [],
  "modSettings": [
    {
      "type": "keybind",
      "name": "pingKeybind",
      "text": "Ping Keybind",
      "mainDefault": "Mouse2"
    },
    {
      "type": "slider",
      "name": "pingDuration",
      "text": "Ping Duration (in seconds)",
      "default": 10,
      "range": {
        "min": 3,
        "max": 30,
        "decimals": 0
      }
    },
    {
      "type": "combobox",
      "name": "debugMode",
      "text": "Debug Logging Level In Console",
      "default": "Disabled",
      "values": [
        "Disabled",
        "Normal",
        "Detailed"
      ]
    }
  ]
}